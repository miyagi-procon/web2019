// -- variable --
BASE_COLOR = rgb(35, 24, 21)
THEME_ORANGE = rgb(231, 119, 34)
THEME_BLUE = rgb(116, 181, 228)
THEME_GRAY = rgb(181, 181, 182)
THEME_GRAY_T = rgba(181, 181, 182, .4)
BG_COLOR = rgb(255, 255, 255)
BG_COLOR_T = rgba(255, 255, 255, .7)
WIDTH_MAX = 1023px

// --- base ---
html
  font-family "游ゴシック", "Yu Gothic", "游ゴシック体", monospace, "ヒラギノ角ゴ ProN W3", Hiragino Kaku Gothic ProN, "メイリオ", Meiryo, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif
  font-weight 500
  -ms-text-size-adjust 100%
  -webkit-text-size-adjust 100%
  -moz-osx-font-smoothing grayscale
  -webkit-font-smoothing antialiased
  box-sizing border-box
  color BASE_COLOR
  background-color BG_COLOR
  @media screen and (max-width: 400px)
    font-size 10px
  @media screen and (min-width: 400px) and (max-width: 600px)
    font-size 12px
  @media screen and (min-width: 600px) and (max-width: 900px)
    font-size 15px
  @media screen and (min-width: 900px)
    font-size 16px
    word-spacing 1px

*, *:before, *:after
  box-sizing border-box
  margin 0

ul
  list-style none
  padding-left 0px

img
  width auto
  height auto
  max-width 100%
  max-height 100%

table
  border-collapse collapse
  & th
    background-color BASE_COLOR
    color white
    font-weight normal
  & th, & td
    border solid 1px black
    padding 1em 1em

code
  font-family 'SourceCodePro', monospace

// -- commons --
.wrapper
  width 80%
  max-width 700px
  display flex
  flex-direction column
  justify-content center
  align-items center
  margin 0 auto

.heading
  // width 100%
  font-size 2rem
  letter-spacing 0.1rem
  font-weight 600
  margin-bottom 2rem
  background: linear-gradient(transparent 70%, THEME_ORANGE 30%);

.subheading
  width 100%
  font-size 1.6rem
  line-height 2.5rem
  font-weight 400
  margin-bottom 3vmin
  background: linear-gradient(transparent 80%, THEME_BLUE 20%);
  margin-top 10vmin

.text
  width 100%
  font-size 1.2rem
  line-height 2.5rem
  &-emphasis
    font-weight 600
    background: linear-gradient(transparent 80%, THEME_ORANGE 20%);

@keyframes slide {
  0% { opacity: 0 }
  10% { opacity: 1 }
  20% { opacity: 1 }
  30% { opacity: 0 }
}